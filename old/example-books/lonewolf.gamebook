function getRandom()
  -- Get a random value between 0 and 9
  local Val = math.floor(math.random(10))
  if(Val == 10) then
    Val = 0
  end
  return Val
end

function waitForRandom()
  -- Display Click to pick a number, display and return random value
  hyEcho(1000)
  hyWaitForClicks()
  local Val = getRandom()
  hyEcho(Val, "\n")
  return Val
end

function clickToContinue()
  -- Display Click to continue and wait
  hyEcho(1012)
  hyWaitForClicks()
end

function getNumItems(item)
  -- Get number of owned items of a specific item
  local nItems = 0

  for i=1,#Backpack do
    if item == Backpack[i] then
      nItems = nItems + 1
    end
  end
  
  for i=1,#Weapons do
    if item == Weapons[i] then
      nItems = nItems + 1
    end
  end

  for i=1,#Special do
    if item == Special[i] then
      nItems = nItems + 1
    end
  end
  
  return nItems
end

function removeItem(item)
  -- Remove one instance of a specific item
  for i=1,#Backpack do
    if item == Backpack[i] then
      table.remove(Backpack, i)
      return
    end
  end
  
  for i=1,#Weapons do
    if item == Weapons[i] then
      table.remove(Weapons, i)
      return
    end
  end

  for i=1,#Special do
    if item == Special[i] then
      table.remove(Special, i)
      return
    end
  end
end

function hasItem(item)
  -- Returns true if owns at least one instance of a specific item
  return not (getNumItems(item) == 0)
end

function hasDiscipline(disciplines)
  -- Returns true if owns specific discipline
  local nDiscipline = #Disciplines
  for i=1,nDiscipline do
    if disciplines == Disciplines[i] then
      return true
    end
  end
  return false
end

function die()
  -- Called when you die
  hyEcho(1001, "\n")
  callbackNoSection()
end

function combatTurn(enemy, enemyskill, enemyendurance, mindblastimmune, flee, evadeoption)
  -- Perform one combatTurn and returns new enemyendurance or -1 if evaded
  InCombatLastSection = true
  if enemyendurance == 0 then
    return 0
  end
  
  local CurCombatSkill = CombatSkill
  if #Weapons == 0 then
    CurCombatSkill = CurCombatSkill - 2
  end
  if not (Weaponskill == 0) and hasItem(Weaponskill) then
    CurCombatSkill = CurCombatSkill + 2
  end
  if not mindblastimmune and hasDiscipline("Mindblast") then
    CurCombatSkill = CurCombatSkill + 2
  end
  
  if not (LastCombatSkill == CurCombatSkill) then
	hyEcho(1016, enemy, 1138, CurCombatSkill, ".\n")
	LastCombatSkill = CurCombatSkill
  end

  local Ratio = CurCombatSkill - enemyskill
	local iColumn = 0
	if Ratio > 0 then
		iColumn = math.min(7 + math.floor(Ratio / 2), 12)
  end
  if Ratio < 0 then
		iColumn = math.max(5 + math.ceil((Ratio + 1) / 2), 0)
  end
  if Ratio == 0 then
		iColumn = 6
  end

  local Val = 0
  if evadeoption and evadeoption > 0 then
    hyEcho(evadeoption, 1080)
    local Res = hyWaitForClicks()
    if Res == 1 then
      return -1
    end
    Val = getRandom()
    hyEcho(Val, "\n")
  else
    Val = waitForRandom()
  end
  
	local Loss = lCombatResults[Val * 13 * 2 + 2 * iColumn + 2]
	local EnemyLoss = lCombatResults[Val * 13 * 2 + 2 * iColumn + 1]

	if Loss == -1 then
    hyEcho(1002)
    Endurance = 0
  else
    if Loss > 0 then
      Endurance = math.max(Endurance  - Loss, 0)
      if flee then
        if Endurance == 0 then
          hyEcho(1072, Loss, 1004, "\n")
          die()
        else
          hyEcho(1072, Loss, 1026, Endurance, 1006)
        end
      else
        if Endurance == 0 then
          hyEcho(1003, Loss, 1004, "\n")
          die()
        else
          hyEcho(1003, Loss, 1026, Endurance, 1006)
        end
      end
    else
      if flee then
        hyEcho(1073)
      end
    end
  end

  if Endurance == 0 then
    die()
  end

  if not flee then
    if EnemyLoss == -1 then
		  hyEcho(enemy, 1007)
      enemyendurance = 0
	  else
      if EnemyLoss > 0 then
        enemyendurance = math.max(enemyendurance - EnemyLoss, 0)
        if enemyendurance == 0 then
          hyEcho(enemy, 1008, EnemyLoss, 1009, "\n")
        else
          hyEcho(enemy, 1008, EnemyLoss, 1005, enemyendurance, 1006, "\n")
        end
      end
    end
  end

  return enemyendurance
end

function describeEnemy(enemy, enemyskill, enemyendurance, mindblastimmune)
  -- Displayes emeny information
  hyEcho(enemy, 1010, enemyskill, 1011, enemyendurance, ".")
  hyEcho("\n")  
end

function combat(enemy, enemyskill, enemyendurance, mindblastimmune, evadeoption)
  -- Perform a complete combat
  describeEnemy(enemy, enemyskill, enemyendurance, mindblastimmune)
  while enemyendurance > 0 do
    enemyendurance = combatTurn(enemy, enemyskill, enemyendurance, mindblastimmune, false, evadeoption)
    if enemyendurance == -1 then
      combatTurn(enemy, enemyskill, enemyendurance, mindblastimmune, true)
      return 1
    end
  end
  return 0
end

function offerItems(...)
  -- Offer one or more items for the player to pickup

  -- Build Item definition list
  local lDefs = {}
  for i=1,#arg do
    for j=1,#lItemDef do
      if(lItemDef[j][1] == arg[i]) then
        table.insert(lDefs, lItemDef[j])
        break
      end
    end
  end

  -- Loop through all itmes
  for i=1,#lDefs do
    local nOfType = 0
    local iOrder = 0
    -- Check if there are multiple items, and insert "first, second" etc.
    for j=1,#lDefs do
      if i == j then
        iOrder = nOfType
      end
      if lDefs[i][1] == lDefs[j][1] then
        nOfType = nOfType + 1
      end
    end
    
    while 1 do
      if nOfType > 1 then
        hyEcho(1024, 1064 + iOrder, lDefs[i][1], ".\n")
      else
        hyEcho(1024, lDefs[i][1], ".\n")
      end
      hyEcho(1012, "\n")
      
      local Res = hyWaitForClicks()
      if Res == 2 then
        break
      else
        if lDefs[i][2] == "Backpack" then
          if not HasBackpack then
            hyEcho(1069, lDefs[i][1], ".\n") -- No backpack
            break
          elseif #Backpack == 8 then
              hyEcho(1070, "\n") -- Full backpack
          else
            hyEcho(1025, lDefs[i][1], ".\n") -- Successful pickup
            table.insert(Backpack, lDefs[i][1])
            break
          end
        elseif lDefs[i][2] == "Weapon" then
          if #Weapons == 2 then
            hyEcho(1071, "\n") -- Full weapoons
          else
            hyEcho(1025, lDefs[i][1], ".\n") -- Successful pickup
            table.insert(Weapons, lDefs[i][1])
            break
          end
        else
          hyEcho(1025, lDefs[i][1], ".\n") -- Successful pickup
          table.insert(Special, lDefs[i][1])
          break
        end
      end
    end
  end
end

function modifyGold(num)
  -- Add or subtract Gold
  if(Gold + num > 50) then
    if(Gold == 50) then
      hyEcho(1013, "\n")
    else
      hyEcho(1014, 50 - Gold, 1015, "\n")
      Gold = 50
    end
  else
    Gold = Gold + num
    hyEcho(1139, Gold, 1140, "\n")
  end
end

function modifyEndurance(num)
  -- Add or subtract Endurance
  Endurance = Endurance + num
  if Endurance < 0 then
    hyEcho(1027, "\n")
    die()
  end
  if Endurance > MaxEndurance + EnduranceBonus then
    Endurance = MaxEndurance + EnduranceBonus
  end
end

function eatMeal()
  if hasDiscipline("Hunting") then
    hyEcho(1130, "\n")
  else
    local nMeals = getNumItems(2000)
    local nLaumspur = getNumItems(2019)
    if nMeals > 0 and nLaumspur > 0 then
      hyEcho(1132, "\n", 1133, "\n")
      local Res = hyWaitForClicks()
      if Res == 1 then
        nLaumspur = 0
      else
        nMeals = 0
      end
    end
    
    if nMeals > 0 then
      useItem(2000)
    elseif nLaumspur > 0 then
      useItem(2019)
    else
      hyEcho(1129, "\n")
      modifyEndurance(-3)
    end
  end
end

function useItem(item)
  if item == 2013 then
    hyEcho(1125, "\n")
    CombatSkill = CombatSkill + 2
  elseif item == 2019 then
    hyEcho(1126, "\n")
    modifyEndurance(3)
  elseif item == 2020 then
    hyEcho(1127, "\n")
    modifyEndurance(4)
  elseif item == 2000 then
    hyEcho(1131, "\n")
  else
    return
  end

  removeItem(item)
end

function listUsableItems()
  local lChoices = {}
  for i=1,#lItemDef - 1 do
    if lItemDef[i][3] and getNumItems(lItemDef[i][1]) > 0 then
      hyEcho(1092, lItemDef[i][1], ".\n")
      table.insert(lChoices, lItemDef[i][1])
    end
  end
  if #lChoices == 0 then
    hyEcho(1123, "\n")
  else
    hyEcho(1124, "\n")
    local Res = hyWaitForClicks()
    if Res < #lChoices + 1 then
      useItem(lChoices[Res])
    end
  end
end

function viewAttributes()
    hyEcho(1093, MaxCombatSkill)
    if Endurance == MaxEndurance + EnduranceBonus then
      hyEcho(1094, Endurance, ".\n")
    else
      hyEcho(1095, Endurance, 1096, MaxEndurance + EnduranceBonus, ".\n")
    end
    hyEcho(1097)
    for j=1,#Disciplines do
      if Disciplines[j] == "Camouflage" then
        hyEcho(1042)
      elseif Disciplines[j] == "Hunting" then
        hyEcho(1043)
      elseif Disciplines[j] == "Sixth Sense" then
        hyEcho(1044)
      elseif Disciplines[j] == "Tracking" then
        hyEcho(1045)
      elseif Disciplines[j] == "Healing" then
        hyEcho(1046)
      elseif Disciplines[j] == "Weaponskill" then
        hyEcho(1047, " ", Weaponskill)
      elseif Disciplines[j] == "Mindshield" then
        hyEcho(1048)
      elseif Disciplines[j] == "Mindblast" then
        hyEcho(1049)
      elseif Disciplines[j] == "Animal Kinship" then
        hyEcho(1050)
      elseif Disciplines[j] == "Mind Over Matter" then
