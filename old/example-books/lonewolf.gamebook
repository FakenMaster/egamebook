        hyEcho(1099)
      end
    end
end

function viewInventory()
  -- Weapons
  if #Weapons == 0 then
    hyEcho(1104)
  elseif #Weapons == 1 then
    hyEcho(1100, Weapons[1], 1101)
  else
    hyEcho(1100, Weapons[1], 1102, Weapons[2], 1103)
  end
  
  -- Backpack
  if not HasBackpack then
    hyEcho(" ", 1105)
  elseif #Backpack == 0 then
    hyEcho(" ", 1106)
  else
    hyEcho(" ", 1100)
    for i=1,#Backpack do
      hyEcho(Backpack[i])
      if i == #Backpack - 1 then
        hyEcho(1102)
      elseif i == #Backpack then
        hyEcho(1122)
      else
        hyEcho(1107)
      end
    end
  end
  
  -- Gold
  if Gold == 0 then
    hyEcho(" ", 1108, ".")
  else
    hyEcho(" ", 1109, Gold, 1110)
  end
  
  -- Special Items
  if #Special == 0 then
    hyEcho(" ", 1111)
  else
    hyEcho(" ", 1112)
    for i=1,#Special do
      hyEcho(Special[i])
      if i == #Special - 1 then
        hyEcho(1102)
      elseif i == #Special then
        hyEcho(".\n")
      else
        hyEcho(1107)
      end
    end
  end
end

function dropItem()
  -- Drop item from backpack
  
  if not HasBackpack then
    hyEcho(1105, "\n")
  elseif #Backpack == 0 then
    hyEcho(1106, "\n")
  else
    local lChoices = {}
    for i=1,#lItemDef - 1 do
      if lItemDef[i][2] == "Backpack" then
        local nItems = getNumItems(lItemDef[i][1])
        if nItems == 1 then
          hyEcho(1115, lItemDef[i][1], ".\n")
          table.insert(lChoices, lItemDef[i][1])
        elseif nItems > 1 then
          hyEcho(1116, lItemDef[i][1], ".\n")
          table.insert(lChoices, lItemDef[i][1])
        end
      end
    end
    hyEcho(1117, "\n")
    local Res = hyWaitForClicks()
    if Res < #lChoices + 1 then
      if getNumItems(lChoices[Res]) > 1 then
        hyEcho(1118, lChoices[Res], ".\n")
      else
        hyEcho(1119, lChoices[Res], ".\n")
      end
      removeItem(lChoices[Res])
    end
  end
end

function dropWeapon()
  -- Drop weapon
  if #Weapons == 0 then
    hyEcho(1104, "\n")
  else
    if #Weapons == 1 then
      hyEcho(1115, Weapons[1], ".\n")
    else
      hyEcho(1115, Weapons[1], ".\n")
      hyEcho(1115, Weapons[2], ".\n")
    end
    hyEcho(1117, "\n")
    local Res = hyWaitForClicks()
    if Res < #Weapons + 1 then
      hyEcho(1119, Weapons[Res], ".\n")
      removeItem(Weapons[Res])
    end
  end
end

function openGameMenu()
  while 1 do
    hyEcho(1089, "\n", 1090, "\n", 1091, "\n", 1113, "\n", 1114, "\n", 1120)
    local Val = hyWaitForClicks()
    hyEcho("\n")
    if Val == 1 then
      listUsableItems()
    elseif Val == 2 then
      viewAttributes()
      viewInventory()
    elseif Val == 3 then
      dropItem()
    elseif Val == 4 then
      dropWeapon()
    elseif Val == 5 then
      break
    end
  end
  hyEcho(1128, "\n")
end

function callbackNoSection()
  hyDeleteSaveGame("Save")
  hyEcho(1135)
  hyWaitForClicks()
  hyEcho("\n")
  hyReset()
end

function callbackPreSection()
  if AutoSave == 1 then
	hySaveGame("Save")
  end
  EnduranceBonus = 0
  if hasItem(2011) then
    EnduranceBonus = EnduranceBonus + 2
  end
  if hasItem(2012) then
    EnduranceBonus = EnduranceBonus + 4
  end
  CombatSkill = MaxCombatSkill
  if hasDiscipline("Healing") and not InCombatLastSection then
    Endurance = Endurance + 1
  end
  if Endurance > MaxEndurance + EnduranceBonus then
    Endurance = MaxEndurance + EnduranceBonus 
  end
  InCombatLastSection = false
end

